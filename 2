&lt;script&gt;
const hours = [
  &quot;10:00&quot;,&quot;10:30&quot;,&quot;11:00&quot;,&quot;11:30&quot;,
  &quot;12:00&quot;,&quot;12:30&quot;,&quot;13:00&quot;,
  &quot;17:00&quot;,&quot;17:30&quot;,&quot;18:00&quot;,&quot;18:30&quot;,
  &quot;19:00&quot;,&quot;19:30&quot;
];

function loadTimes(){
  const dateVal = document.getElementById(&quot;date&quot;).value;
  const container = document.getElementById(&quot;times&quot;);
  const selected = document.getElementById(&quot;selectedTime&quot;);

  if(!dateVal) return;

  container.innerHTML = &quot;&quot;;
  selected.value = &quot;&quot;;

  const booked = JSON.parse(localStorage.getItem(dateVal)) || [];

  hours.forEach(time=&gt;{
    const btn = document.createElement(&quot;button&quot;);
    btn.type=&quot;button&quot;;
    btn.textContent=time;

    if(booked.includes(time)){
      btn.className=&quot;booked&quot;;
    }else{
      btn.onclick=()=&gt;selectTime(dateVal,time,btn);
    }
    container.appendChild(btn);
  });
}

function selectTime(date,time,btn){
  document.querySelectorAll(&quot;#times button&quot;).forEach(b=&gt;b.classList.remove(&quot;active&quot;));
  btn.classList.add(&quot;active&quot;);
  document.getElementById(&quot;selectedTime&quot;).value=time;

  const booked = JSON.parse(localStorage.getItem(date)) || [];
  if(!booked.includes(time)){
    booked.push(time);
    localStorage.setItem(date,JSON.stringify(booked));
  }
}

function updatePrice(){
  const s = document.getElementById(&quot;service&quot;).value;
  if(s===&quot;Κούρεμα&quot;) servicePrice.value=&quot;5€&quot;;
  if(s===&quot;Κούρεμα &amp; Γένι&quot;) servicePrice.value=&quot;7€&quot;;
  if(s===&quot;Μόνο Γένι&quot;) servicePrice.value=&quot;4€&quot;;
}

function sendWhatsApp(){
  const nameVal = document.getElementById(&quot;name&quot;).value;
  const phoneVal = document.getElementById(&quot;phone&quot;).value;
  const serviceVal = document.getElementById(&quot;service&quot;).value;
  const priceVal = document.getElementById(&quot;servicePrice&quot;).value;
  const dateVal = document.getElementById(&quot;date&quot;).value;
  const timeVal = document.getElementById(&quot;selectedTime&quot;).value;

  if(!timeVal){
    alert(&quot;Παρακαλώ επίλεξε ώρα.&quot;);
    return false;
  }

  const msg =
`ΝΕΟ ΡΑΝΤΕΒΟΥ - ZERO POINT
Όνομα: ${nameVal}
Τηλέφωνο: ${phoneVal}
Υπηρεσία: ${serviceVal}
Τιμή: ${priceVal}
Ημερομηνία: ${dateVal}
Ώρα: ${timeVal}`;

  window.open(
    &quot;https://wa.me/306984058978?text=&quot; + encodeURIComponent(msg),
    &quot;_blank&quot;
  );

  return true;
}
&lt;/script&gt;

